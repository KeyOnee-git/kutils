{
  	"name": "pandabt-helper",
	"displayName": "PandaBT Helper",
	"description": "panda behavior tree helper",
	"publisher": "KeyOnee",
	"author": {
		"name": "KeyOnee",
		"email": "keyonee.git@gmail.com"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/KeyOnee-git/vscode-pandabt-extension.git"
	},
	"activationEvents": [
        "onCommand:pandabt-helper.helloWorld",
		"onCommand:pandabt-helper.testSetting",
		"onCommand:pandabt-helper.updateConfig"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pandabt-helper.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "pandabt-helper.testSetting",
				"title": "KeyOnee TestSetting"
			},
			{
				"command": "pandabt-helper.updateConfig",
				"title": "KeyOnee updateConfig"
			}
		],
		"configuration":{
			"title": "PandaBT-Helper",
			"properties": {
				"pandabt-helper.b1": {
					"type":"boolean",
					"scope": "window",
					"default":false,
					"description": "Alah Blah Clah"
				},
				"pandabt-helper.lol": {
					"type":"string",
					"scope": "window",
					"default":"Shaco",
					"description": "my first lol character was singed??"
				},
				"pandabt-helper.settings": {
					"type":"object",
					"scope": "window",
					"default": { 
						"keyword": {
							 "node":"\\b(sequence|fallback|parallel|race)\\b", 
							 "control":"\\b(while|repeat|random)\\b",
							 "decorator":"\\b(not|mute)\\b",
							 "custom":{
								 "btc.core":"",
								 "btc":""								 
							 }
						}
					},
					"description": "set config to settings.json"
				},
				"pandabt-helper.tmConfig.keyword.tree": {
					"type":"string",
					"scope": "window",
					"default":"tree",
					"description": "tree keywords"
				},
				"pandabt-helper.tmConfig.keyword.control": {
					"type":"string",
					"scope": "window",
					"default":"sequence fallback",
					"description": "control keywords"
				}
			}
		},
		"languages": [
            {
                "id": "bt",
                "aliases": [
                    "BT",
                    "bt"
                ],
                "extensions": [
                    ".txt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bt",
                "scopeName": "source.bt",
                "path": "./syntaxes/bt.tmLanguage.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	}
}
